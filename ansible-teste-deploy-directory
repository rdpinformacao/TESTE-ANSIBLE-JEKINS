- hosts: '{{ host }}'
  remote_user: gtiadm
  become: True
  any_errors_fatal: True
  tasks:
      - name: " 1Â° Adicionando o diretorio nocPro2_auto em /tmp/ teste "
        synchronize:
            src:  /etc/ansible/dataDestino/nocPro2_auto
            dest: /tmp/
            recursive: yes
            delete: yes
            compress: yes
            group: yes
            owner: yes
            perms: yes
